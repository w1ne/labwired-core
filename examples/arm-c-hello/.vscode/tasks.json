{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Firmware",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "make clean",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Start LabWired DAP Server",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "cd ${workspaceFolder}/../.. && cargo run -p labwired-dap -- --program ${workspaceFolder}/target/firmware --system ${workspaceFolder}/system.yaml"
            ],
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*)$",
                    "file": 1
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*",
                    "endsPattern": "GDB Server listening.*"
                }
            }
        },
        {
            "label": "Build and Start DAP Server",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build Firmware",
                "Start LabWired DAP Server"
            ],
            "problemMatcher": []
        }
    ]
}